<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>IRI.ShapefileFormat</Title>
    <NoWarn>CS8602,CS8618,CS8625</NoWarn>
  </PropertyGroup>
  <PropertyGroup>
    <!-- or "latest", "preview", or "11.0" -->
    <LangVersion>latest</LangVersion>
  </PropertyGroup>
  
  <PropertyGroup>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Hossein Narimani Rad</Authors>
    <Company>Maptor</Company>
    <Description>A .NET standard library to read/write shapefile (*.shp, *.shx, *.dbf, *.prj)</Description>
    <RepositoryUrl>https://github.com/hosseinnarimanirad/Maptor/tree/master/IRI.Maptor.Sta/IRI.Maptor.Sta.ShapefileFormat</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>shapefile;GIS;spatial;dbf</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
 
  <ItemGroup>
    <Content Include="Info\Info.txt" />
    <Content Include="License.txt" />
  </ItemGroup>
 
  <ItemGroup>
    <ProjectReference Include="..\IRI.Maptor.Sta.Common\IRI.Maptor.Sta.Common.csproj" />
    <ProjectReference Include="..\IRI.Maptor.Sta.Ogc\IRI.Maptor.Sta.Ogc.csproj" />
    <ProjectReference Include="..\IRI.Maptor.Sta.Spatial\IRI.Maptor.Sta.Spatial.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="PGdb\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
