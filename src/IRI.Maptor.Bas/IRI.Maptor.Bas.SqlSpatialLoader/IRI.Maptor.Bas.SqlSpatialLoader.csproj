<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Hossein Narimani Rad</Authors>
    <Description>Provides SqlSpatial native DLL loading for Microsoft.SqlServer.Types.</Description>
    <PackageId>IRI.Maptor.Bas.SqlSpatialLoader</PackageId>    
    <PackageTags>SQL Server;Spatial;SqlGeometry;SqlGeography;Loader</PackageTags>
    <RepositoryUrl>https://github.com/your-repo/Maptor</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/your-repo/Maptor</PackageProjectUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <IncludeSource>true</IncludeSource>
    <NoWarn>$(NoWarn);NU1701</NoWarn>
  </PropertyGroup>
 
  <!-- Reference official managed package -->
  <ItemGroup>
    <PackageReference Include="Microsoft.SqlServer.Types" PrivateAssets="all" />
  </ItemGroup>



  <!-- Pack native binaries under runtimes/win-*/native -->
  <ItemGroup>
    <!-- x64 -->
    <None Include="SqlServerTypes\x64\SqlServerSpatial140.dll"
          Pack="true"
          PackagePath="runtimes/win-x64/native"
          CopyToOutputDirectory="PreserveNewest" />
    <None Include="SqlServerTypes\x64\msvcr120.dll"
          Pack="true"
          PackagePath="runtimes/win-x64/native"
          CopyToOutputDirectory="PreserveNewest" />

    <!-- x86 -->
    <None Include="SqlServerTypes\x86\SqlServerSpatial140.dll"
          Pack="true"
          PackagePath="runtimes/win-x86/native"
          CopyToOutputDirectory="PreserveNewest" />
    <None Include="SqlServerTypes\x86\msvcr120.dll"
          Pack="true"
          PackagePath="runtimes/win-x86/native"
          CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- Pack buildTransitive props -->
  <ItemGroup>
    <None Include="buildTransitive\IRI.Maptor.Bas.SqlSpatialLoader.props"
          Pack="true"
          PackagePath="buildTransitive"
          CopyToOutputDirectory="Never" />
  </ItemGroup>

</Project>
