<Window x:Class="IRI.MainProjectWPF.Thesis.MainThesisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IRI.MainProjectWPF.Thesis"
        mc:Ignorable="d"
        Title="MainThesisWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Content="K-d Tree" Margin="2" Click="openKdTree"/>
        <Button Grid.Row="0" Grid.Column="1" Content="K-d Tree (With SFCs)" Margin="2" Click="openKdTreeSfc"/>
        <Button Grid.Row="1" Grid.Column="0" Margin="2" Click="openSfc">
            <TextBlock TextWrapping="Wrap" Text="Space Filling Curve Generator" HorizontalAlignment="Center" TextAlignment="Center"/>
        </Button>
        <Button Grid.Row="1" Grid.Column="1" Content="R-Tree (With SFCs)" Margin="2" Click="openRTreeSfc"/>
        <Button Grid.Row="2" Grid.Column="0" Content="Point sorting" Click="pointSorting"/>
    </Grid>
</Window>
