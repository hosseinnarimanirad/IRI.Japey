        <mahApp:ColorPicker Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="4" FlowDirection="LeftToRight" Width="230"
                          SelectedColor="{Binding Symbology.Fill, Mode=TwoWay, Converter={StaticResource solidColorBrushToColorConverter}}"
                          mahApp:TextBoxHelper.Watermark="{Binding ElementName=root, Path=FillLabel}"
                          mahApp:TextBoxHelper.ClearTextButton="True"
                          mahApp:TextBoxHelper.UseFloatingWatermark="True"                            
