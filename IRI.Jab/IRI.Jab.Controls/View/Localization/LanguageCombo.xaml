<UserControl x:Class="IRI.Jab.Controls.View.LanguageCombo"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:localization="clr-namespace:IRI.Jab.Common.Localization;assembly=IRI.Jab.Common"  >
    <ComboBox ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedLanguage}" HorizontalContentAlignment="Center" VerticalAlignment="Center">
        <ComboBox.DataContext>
            <localization:LanguageSelectorViewModel/>
        </ComboBox.DataContext>
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Image Source="{Binding FlagUri}" Stretch="UniformToFill" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding NativeName}" VerticalAlignment="Center" FlowDirection="{Binding TextFlowDirection}"/>
                </StackPanel>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>
</UserControl>
